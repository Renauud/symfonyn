{% extends 'base.html.twig' %}

{% block body %}
<div class="container mx-auto p-8">
    <h1 class="text-2xl font-bold mb-6">Liste des tâches</h1>
    <div class="flex justify-end mb-4">
        <a href="{{ path('task_create') }}" class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600">
            Créer une tâche
        </a>
    </div>
    <table class="table-auto w-full border-collapse border border-gray-300">
        <thead>
            <tr class="bg-gray-100">
                <th class="border border-gray-300 px-4 py-2">ID</th>
                <th class="border border-gray-300 px-4 py-2">Titre</th>
                <th class="border border-gray-300 px-4 py-2">Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for task in tasks %}
                <tr class="hover:bg-gray-50">
                    <td class="border border-gray-300 px-4 py-2">{{ task.id }}</td>
                    <td class="border border-gray-300 px-4 py-2">{{ task.title }}</td>
                    <td class="border border-gray-300 px-4 py-2">
                        <a href="{{ path('task_view', { id: task.id }) }}" class="text-blue-500 hover:underline mr-2">Voir</a>
                        <a href="{{ path('task_edit', { id: task.id }) }}" class="text-yellow-500 hover:underline mr-2">Modifier</a>
                        <a href="{{ path('task_delete', { id: task.id }) }}" class="text-red-500 hover:underline">Supprimer</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
