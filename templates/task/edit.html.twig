{% extends 'base.html.twig' %}

{% block body %}
<div class="container mx-auto p-8">
    <h1 class="text-2xl font-bold mb-6">Modifier la tâche</h1>
    {{ form_start(form, { attr: { class: 'space-y-4' } }) }}
        <div>
            {{ form_label(form.name, 'Titre', { label_attr: { class: 'block text-sm font-medium text-gray-700' } }) }}
            {{ form_widget(form.name, { attr: { class: 'mt-1 block w-full px-4 py-2 border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500' } }) }}
        </div>
        <div>
            {{ form_label(form.description, 'Description', { label_attr: { class: 'block text-sm font-medium text-gray-700' } }) }}
            {{ form_widget(form.description, { attr: { class: 'mt-1 block w-full px-4 py-2 border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500' } }) }}
        </div>
        <div>
            <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600">Mettre à jour</button>
        </div>
    {{ form_end(form) }}
</div>
{% endblock %}
