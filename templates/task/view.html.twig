{% extends 'base.html.twig' %}

{% block body %}
<div class="container mx-auto p-8">
    <h1 class="text-2xl font-bold mb-6">Détails de la tâche</h1>
    <div class="bg-white shadow-md rounded-lg p-6">
        <div class="mb-4">
            <h2 class="text-xl font-semibold text-gray-700">Informations générales</h2>
            <p><strong>ID :</strong> {{ task.id }}</p>
            <p><strong>Nom :</strong> {{ task.name }}</p>
            <p><strong>Description :</strong> {{ task.description }}</p>
        </div>

        <div class="mb-4">
            <h2 class="text-xl font-semibold text-gray-700">Dates</h2>
            <p><strong>Date de création :</strong> {{ task.createdAt|date('d/m/Y H:i') }}</p>
            <p><strong>Date de mise à jour :</strong> {{ task.updatedAt|date('d/m/Y H:i') }}</p>
        </div>

        <div class="mb-4">
            <h2 class="text-xl font-semibold text-gray-700">Auteur</h2>
            <p><strong>Nom de l'auteur :</strong> {{ task.author }}</p>
        </div>
    </div>

    <div class="mt-6 flex space-x-4">
        <a href="{{ path('task_index') }}" class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600">
            Retour à la liste des tâches
        </a>
        <a href="{{ path('task_edit', { id: task.id }) }}" class="bg-yellow-500 text-white px-4 py-2 rounded hover:bg-yellow-600">
            Modifier la tâche
        </a>
    </div>
</div>
{% endblock %}
